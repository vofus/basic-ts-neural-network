{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
				"*": [
					"node_modules/*"
				]
		},
		"lib": [
			"es2015"
		]
	},
	"include": [
		"src/**/*"
	]
}